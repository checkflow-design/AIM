function refreshForm(innerHTML) {
  const newComment = document.getElementById('comment_content');
  newComment.innerHTML = innerHTML;
}

function addComment(reviewHTML) {
  let comments = document.getElementById('all-comments');
  comments.insertAdjacentHTML('beforeend', reviewHTML);
}

<% if @comment.errors.any? %>
 refreshForm('<%= j render "comments/form", campaign: @campaign, comment: @comment %>');
<% else %>
  addComment('<%= j render "comments/show", campaign: @campaign, comment: @comment %>');
  refreshForm('<%= j render "comments/form", campaign: @campaign, comment: Comment.new %>');
<% end %>
