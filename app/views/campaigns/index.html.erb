<!--Featured campaign-->
<div id="featured_campaign">
  <!--Featured campaign image-->
  <%= image_tag("https://cdn.shopify.com/s/files/1/0533/2089/files/placeholder-images-image_large.png?v=1530129081") %>
  <!--Featured campaign description-->
  <div id="featured_campaign_text">
    <h1>
      <%= link_to @featured_campaign.title.upcase, campaign_path(@featured_campaign) %>
    </h1>
    <p>
      <%= @featured_campaign.campaign_description %>
    </p>
  </div>
</div>

<!--Other campaigns-->

<!--Global warming-->
<div class="title_container">
  <!--CAUSE-->
  <h2>GLOBAL WARMING</h2>
</div>
<div id="cause_container">
  <!--Iterate over campaigns-->
  <% @campaigns.each do |campaign|%>
    <div id="index-card">
      <!--campaign image-->
      <%= image_tag("https://cdn.shopify.com/s/files/1/0533/2089/files/placeholder-images-image_large.png?v=1530129081") %>
      <!--campaign infos-->
      <div id="index-card-infos">
        <div>
          <h2><%= link_to campaign.title, campaign_path(campaign) %></h2>
          <p><%= campaign.campaign_description %></p>
          <p>01.01.1901</p>
        </div>
        <p>TODO: avatars of participants</p>
        <!-- link to participate-->
        <%= link_to 'Join', root_path %>
      </div>
    </div>
  <% end %>
</div>


