<!-- Banner -->
<div class="header">
  <div class="d-flex">
    <%= cl_image_tag(@campaign.campaign_picture, class: 'campaign-picture',
      crop: :scale) %>
  </div>
  <div class="header-content">
    <h1><%= @campaign.title %></h1>
    <h2> <%= @campaign.campaign_description.split(/[!||.||?]/).first %></h2>
    <p><%= @campaign.launch_date.strftime("%d. %B %Y") %></p>
    <br>
    <div id="campaign-users">
      <% @campaign.users.each do |user| %>
        <%= link_to cl_image_tag(user.picture, width: 40, height: 40, crop: :thumb, gravity: :face, class: "avatar campaign-avatar"), user_path(user) %>
      <% end %>
    </div>
  </div>
  <%= cl_image_tag(@campaign.brand_logo, class: 'brand-logo',
      width: 70, crop: :scale) %>
</div>

<!-- Content -->
<div class="container-show-btn">
  <!-- Link Back  -->
  <div class="activation-button">
    <%= link_to 'ALL CAMPAIGNS', campaigns_path, class: 'more-button more-button:hover all-campaigns-button' %>
  </div>

  <div class="activation-button">
    <%# if @campaign.users.include?(current_user) %>
      <%#= link_to 'REMOVE', campaign_selection_path(@campaign, current_user), method: 'delete', class: 'more-button more-button:hover remove-link' %>
    <%# else %>
      <%= link_to 'JOIN', campaign_selections_path(@campaign), method: 'post', class: 'more-button more-button:hover' %>
    <%# end %>
  </div>

</div>


<!-- Comments -->
 <% if @campaign.users.include?(current_user) %>
      <h2 class="comment-header">Share your thoughts !</h2>
<div class="container-comments">
      <div class="comments">
      <div class="new-comment">
        <div id="all-comments">
        <% if @campaign.comments.empty? %>
          <p id='empty-comment'><%= 'Be the first to leave a comment!'%></p>
        <% else %>
          <% @campaign.comments.reverse.each do |comment| %>
            <%= render 'comments/show', comment: comment %>
          <% end %>
        <% end %>
      </div>
        <br>
          <%= render 'comments/form', campaign: @campaign, comment: @comment %>
        <br>
      </div>

    <% end %>
  </div>
</div>



