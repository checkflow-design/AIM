<div class="card-flex">
  <% @campaigns.sample(5).each do |campaign|%>
    <div class="card-campaign" id="index-card">
      <%= cl_image_tag(campaign.campaign_picture,  class:"card-img") %>
      <% if campaign.live %>
        <p class="live-flag">LIVE</p>
      <% end %>
      <div class="card-campaign-infos">
        <h2><%= link_to campaign.title, campaign_path(campaign) %></h2>
        <p class="descript"><%= campaign.campaign_description.split(/[!||.||?]/).first  %></p>
        <p class="date"><%= campaign.launch_date || 'TBD' %></p>
      </div>
    </div>
  <% end %>
</div>

